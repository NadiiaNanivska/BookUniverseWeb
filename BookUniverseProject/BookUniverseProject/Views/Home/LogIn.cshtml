@{
    ViewData["Title"] = "LogIn Page";
}

<div class="registration-container">
    <div class="registration-form">
        <h1 class="registration-heading">Book Universe</h1>
        <p class="registration-subheading">Sign in to continue</p>
        <form id="signin-form" asp-action="HomePage" asp-controller="Home" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username" class="form-control form-control-lg" placeholder="Enter your username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" class="form-control form-control-lg" placeholder="Enter your password" required>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-secondary" onclick="redirectToSignInPage()">Sign In</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/signIn.js" asp-append-version="true"></script>
