@{
    ViewData["Title"] = "Forgot password Page";
}

<div class="main-form">
    <div class="row">
        <div class="col-md-6">
            <div class="image-section-fp"></div>
        </div>
        <div class="col-md-6">
            <h1 class="registration-heading">Book Universe</h1>
            <h2 class="registration-subheading">Restore password</h2>
            <p class="site-description">Input your email and wait for link for restoring your password</p>
            <div class="justify-content-center">
                <div>
                    <div class="d-flex flex-column">
                        <input type="email" class="form-control form-control-lg" placeholder="Email">
                    </div>
                </div>
                <button class="btn btn-outline-secondary" id="forgotPassBtn">Confirm email</button>
            </div>

        </div>
    </div>
</div>
